{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        // "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "${workspaceFolder}/test-workspace.code-workspace"
      ],
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "preLaunchTask": "watch",
      "sourceMaps": true,
      "smartStep": true,
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Extension Tests",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "${workspaceFolder}/test-workspace.code-workspace",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/test/suite/index.js",
        "--disable-extensions"
      ],
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "preLaunchTask": "watch",
      "sourceMaps": true,
      "smartStep": true,
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Run test.ps1",
      "type": "PowerShell",
      "request": "launch",
      "script": "${workspaceFolder}/test-workspace/test.ps1",
      "cwd": "${workspaceFolder}/test-workspace",
      "createTemporaryIntegratedConsole": true
    },
    {
      "name": "Run test.js",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/test-workspace/test.js",
      "cwd": "${workspaceFolder}/test-workspace",
      "console": "integratedTerminal"
    }
  ]
}
