{
  "workspaceFolder": "__WORKSPACE_B__",
  "configurationName": "Run node/server.js",
  "mode": "singleShot",
  "breakpointConfig": {
    "breakpoints": [
      {
        "path": "server.js",
        "code": "queryParamForDebugger = queryParam",
        "variable": "queryParam",
        "onHit": "captureAndStopDebugging"
      }
    ]
  },
  "serverReady": {
    "trigger": {
      "pattern": "Server listening on http://localhost:31337"
    },
    "action": {
      "type": "httpRequest",
      "url": "http://localhost:31337/api/echo?q=from-demo"
    }
  }
}
