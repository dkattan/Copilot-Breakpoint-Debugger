{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "tsc: build with errors",
      "type": "shell",
      "command": "${workspaceFolder}/../../node_modules/.bin/tsc",
      "windows": {
        "command": "${workspaceFolder}/../../node_modules/.bin/tsc.cmd"
      },
      "args": ["--noEmit"],
      "problemMatcher": "$tsc",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "sh: fail build on stdout",
      "type": "process",
      "command": "node",
      "args": [
        "-e",
        "console.log('Build error on stdout'); process.exit(1);"
      ],
      "problemMatcher": []
    }
  ]
}
