{
  "compilerOptions": {
    "target": "ES2020",
    "rootDir": "./",
    "module": "commonjs",
    "strict": true,
    "strictPropertyInitialization": true,
    "outDir": "./out",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["*.ts"],
  "exclude": ["**/node_modules/**"]
}
